<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!--<item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>-->
    </style> <!-- Base application theme. -->

    <style name="PlayTheme" parent="AppTheme">
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="TalkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="@style/AppTheme">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="OrangeButton">
        <item name="android:background">@drawable/selector_bg_button</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="OrangeButton.TextAppearance">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Inverse
        </item>
    </style>

    <style name="OrangeButton.Text">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OrangeButton.Button" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">62dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Inverse
        </item>
    </style>

    <!--text_sizes-->
    <style name="Size8">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="Size9">
        <item name="android:textSize">9sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size10">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size11">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size12">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size14">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size15">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size16">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size18">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Size20">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--/text_sizes-->

    <style name="Recovery.Header.Text" parent="Size16">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Recovery.WelcomeText" parent="Size18">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Recovery.Text" parent="Size14">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Recovery.Footer.Text" parent="Size15">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Edittext.BlackText" parent="Size16">
        <item name="colorControlNormal">@color/color_black</item>
        <item name="colorControlActivated">@color/color_black</item>
        <item name="android:textColorHint">@color/color_black</item>
    </style>

    <style name="Edittext.ThemeColor" parent="Size16">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/color_gray</item>
    </style>

    <style name="Signup.Edittext.Text" parent="Edittext.BlackText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Signup.Edittext.BlackText" parent="Edittext.BlackText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EmptyTextView" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/empty_view_text_color</item>
    </style>

    <style name="List.Header.Text" parent="Size16">
        <item name="android:textColor">@color/list_header_text_color</item>
    </style>

    <style name="Follows.Header.Text" parent="Size16">
        <item name="android:textColor">@color/item_header_text_color</item>
    </style>

    <style name="Follows.Info.Text" parent="Size12">
        <item name="android:textColor">@color/item_info_text_color</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">@dimen/indent_small</item>
        <item name="tabPaddingEnd">@dimen/indent_small</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/color_black</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--posible deletion old styles-->
    <style name="ProfileButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="ProfileCounterValueText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="ProfileActionsText" parent="Size14">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ColorSwitchStyle">
        <!--   <item name="colorPrimary">@color/colorPrimary</item>
           <item name="colorPrimaryDark">@color/second</item>
           <item name="colorAccent">@color/third</item>-->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/color_black_transparent</item>
        <item name="colorControlNormal">@color/color_black</item>
        <!--<item name="colorControlActivated">@color/color_black_transparent</item>-->
        <item name="colorSwitchThumbNormal">@color/list_divider_color</item>
        <item name="colorButtonNormal">@color/colorTextInactive</item>
    </style>

    <style name="CheckBoxTheme">
        <item name="colorControlNormal">@color/color_gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="OpponentMessageTheme" parent="Size16">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/opponent_message_text_color</item>
    </style>

    <style name="MyMessageTheme" parent="Size16">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="SystemMessageTheme" parent="Size10">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/system_message_text_color</item>
    </style>

    <style name="SearchFieldNameTextAppearanceLabel" parent="Size14">
        <item name="android:textColor">@color/fragment_search_caption_text_color</item>
    </style>

    <style name="SearchFieldNameTextAppearance" parent="Size16">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!--/posible deletion old styles-->

    <style name="Text.PrimaryColor" parent="Size16">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Dialog.Title" parent="Size18">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <!--/posible deletion old styles-->
    <style name="Text.2Play.Label" parent="Size14">
        <item name="android:textColor">@color/item_header_text_color</item>
    </style>

    <style name="Text.ActiveGame.Label" parent="Size14">
        <item name="android:textColor">@color/item_header_text_color</item>
    </style>

    <style name="SessionInfoTextStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/view_session_info_text_size</item>
    </style>

    <style name="ScoreEditTextStyle">
        <item name="android:button">@drawable/bg_score_check_box_selector</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="ActionTextStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/activity_game_action_text_view_text_size</item>
    </style>

    <style name="GameButtonStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/game_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_game_button_selector</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="ChatEditTextStyle">
        <item name="android:alpha">80</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/chat_edit_text_text_size</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ChatEditTextTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="WebCamNameTextStyle" parent="Size14">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="PlayWebCamNameTextStyle" parent="Size14">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">8</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WebCamLevelTextStyle" parent="Size10">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.ActiveTalk.Label" parent="Size14">
        <item name="android:textColor">@color/item_header_text_color</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- <item name="android:textColor">#00FF00</item>
         <item name="android:typeface">monospace</item>
         <item name="android:textSize">10sp</item>-->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="UserSearchTextViewStyle">
        <item name="android:textSize">@dimen/fragment_talk_waiting_for_user_text_view_text_size
        </item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="TalkInfoTextStyle" parent="Size16">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="AskedQuestionTextStyle" parent="Size16">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="TalkTitleTextStyle" parent="Size20">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="ChatItemsTextStyle" parent="Size14">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="SearchButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/selector_bg_stroked_button</item>
    </style>

    <style name="PlayTitleTextStyle" parent="Size20"></style>

    <style name="SeekbarTheme" parent="Base.Widget.AppCompat.SeekBar">
        <item name="colorControlNormal">@color/color_white</item>
        <item name="colorControlActivated">@color/color_white</item>
    </style>

    <declare-styleable name="HeartBeatView">
        <attr name="scaleFactor" format="float" />
        <attr name="duration" format="integer" />
    </declare-styleable>
</resources>
