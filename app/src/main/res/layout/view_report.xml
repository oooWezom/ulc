<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/report_radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/indent_medium">

        <RadioButton
            android:id="@+id/report_nudity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_report"
            android:checked="true"
            android:paddingStart="@dimen/indent_small"
            android:text="@string/nudity"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/report_violence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_report"
            android:paddingStart="@dimen/indent_small"
            android:text="@string/violence_or_harm"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/report_harassment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_report"
            android:paddingStart="@dimen/indent_small"
            android:text="@string/harassment"
            android:textSize="18sp"/>
    </RadioGroup>
</FrameLayout>