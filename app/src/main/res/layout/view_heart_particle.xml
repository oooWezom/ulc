<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/view_heart_particle_parent_view"
              android:layout_height="@dimen/view_heart_particle_image_view_size"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_heart_particle_image_view"
        android:layout_width="@dimen/view_heart_particle_image_view_size"
        android:layout_height="@dimen/view_heart_particle_image_view_size"
        android:src="@drawable/ic_heart"/>

    <TextView
        android:id="@+id/view_heart_particle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/indent_mini"
        android:textSize="12sp"
        tools:text="25"
        android:layout_gravity="center_vertical"/>
</LinearLayout>