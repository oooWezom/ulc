<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="@dimen/indent_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:theme="@style/Dialog.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/indent_small"
            android:text="@string/report"
            app:fontPath="fonts/helveticaneuecyr_medium.ttf"/>

        <EditText
            android:background="@null"
            android:id="@+id/dialog_invite_text_view"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/indent_small"
            android:layout_height="wrap_content"
            android:lines="3"/>
    </LinearLayout>

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/dialog_report_image_view"
        android:layout_width="@dimen/dialog_user_avatar_size"
        android:layout_height="@dimen/dialog_user_avatar_size"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/indent_medium"
        android:src="@drawable/ic_default_user_avatar"
        app:siBorderColor="@color/colorPrimary"
        app:siBorderWidth="@dimen/circular_border_padding"/>

   <!-- <com.wezom.ulcv2.ui.view.RadialProgressView
        android:id="@+id/radial"
