<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/game_board_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/game_board_left_button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/indent_mini"
        android:layout_weight="1">

        <Button
            android:id="@+id/game_board_left_button"
            android:layout_width="@dimen/game_button_ready_width"
            android:layout_height="@dimen/game_button_ready_height"
            android:layout_gravity="center_vertical|end"
            android:background="@color/color_game_ready_button_idle"
            android:text="@string/ready"
            android:textAllCaps="true"
            android:textColor="@color/color_white"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/game_board_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            tools:text="@string/waiting_for_players"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/game_board_right_button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/indent_mini"
        android:layout_weight="1">

        <Button
            android:id="@+id/game_board_right_button"
            android:layout_width="@dimen/game_button_ready_width"
            android:layout_height="@dimen/game_button_ready_height"
            android:layout_gravity="center_vertical|start"
            android:background="@color/color_game_ready_button_idle"
            android:text="@string/ready"
            android:textAllCaps="true"
            android:textColor="@color/color_white"/>
    </FrameLayout>
</LinearLayout>