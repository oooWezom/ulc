<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_restore_find_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/fragment_recovery_header_text_view"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_edit_text_error_image_view"
        android:layout_width="@dimen/error_image_size"
        android:layout_height="@dimen/error_image_size"
        android:layout_alignBottom="@+id/fragment_recovery_username_text_view"
        android:layout_alignTop="@+id/fragment_recovery_username_text_view"
        android:layout_marginLeft="@dimen/indent_small"
        android:layout_marginRight="@dimen/indent_mini"
        android:layout_toLeftOf="@+id/fragment_recovery_username_text_view"
        android:paddingBottom="@dimen/indent_mini"
        android:paddingTop="@dimen/indent_mini"
        android:scaleType="center"
        android:src="@drawable/ic_error" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--app:fontPath="fonts/helveticaneuecyr_roman.ttf"-->


        <EditText
            android:id="@+id/view_edit_text"
            style="@style/Edittext.BlackText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/indent_small"
            android:paddingRight="@dimen/indent_large"
            android:singleLine="true"
            android:theme="@style/Edittext.BlackText"
            app:fontPath="fonts/helveticaneuecyr_roman.ttf" />

        <ImageView
            android:id="@+id/view_edit_text_clear_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:paddingRight="@dimen/indent_mini"
            android:src="@drawable/ic_remove"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>