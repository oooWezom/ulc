<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                android:id="@+id/view_category_item_ripple_layout"

                                                android:layout_width="@dimen/category_item_icon_size_big"
                                                android:layout_height="@dimen/category_item_size_big"
                                                android:layout_gravity="center"
                                                android:padding="@dimen/indent_mini"
                                                app:mrl_rippleColor="@color/colorTextInactive"
                                                app:mrl_rippleDimension="@dimen/ripple_size"
                                                app:mrl_rippleHover="true"
                                                app:mrl_rippleOverlay="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/view_category_item_choose_circle"
            android:layout_width="@dimen/category_item_icon_size_circle_big"
            android:layout_height="@dimen/category_item_icon_size_circle_big"
            android:layout_centerInParent="true"
            android:src="@drawable/shape_bg_category_extended"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/view_category_item_image"
            android:layout_width="@dimen/category_item_icon_size_image_big"
            android:layout_height="@dimen/category_item_icon_size_image_big"
            android:layout_centerInParent="true"
            tools:src="@drawable/ic_choose_random"/>

        <TextView
            android:id="@+id/view_category_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            tools:text="Ecology"/>
    </RelativeLayout>

</com.balysv.materialripple.MaterialRippleLayout>


