<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/list_background_color"
    android:orientation="vertical">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/indent_medium"
        android:padding="@dimen/fragment_preference_element_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/two_play"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/fragment_news_feed_2play_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:theme="@style/ColorSwitchStyle"
            android:shadowColor="@color/mdtp_dark_gray"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_divider_size"
        android:background="@color/list_background_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="@dimen/fragment_preference_element_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/two_talk"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/fragment_news_feed_2talk_switch"
            android:layout_width="wrap_content"
            app:theme="@style/ColorSwitchStyle"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_divider_size"
        android:background="@color/list_background_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="@dimen/fragment_preference_element_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:text="@string/follow"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/fragment_news_feed_filter_follows_switch"
            android:layout_width="wrap_content"
            app:theme="@style/ColorSwitchStyle"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_divider_size"
        android:background="@color/list_background_color"/>


</LinearLayout>